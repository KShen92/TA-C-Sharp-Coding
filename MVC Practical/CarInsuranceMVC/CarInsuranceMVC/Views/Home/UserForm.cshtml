@{
    ViewBag.Title = "Instant Quote";
}

<div class="jumbotron jumbotron-fluid text-center" style="padding:0px;padding-bottom: 50px;background-color:rgba(255,255,255,0.6);">
    <div class="container">
        <h3 style="font-size:30px;">Please complete the form below for your instant quote:</h3>
        @using (Html.BeginForm("UserInput", "Home", FormMethod.Post))
        {
        <div class="row">
            <div class="form-group col-md-12">
                <input name="FirstName" type="text" class="form-control" placeholder="First Name" required />
            </div>
            <div class="form-group col-md-12">
                <input name="LastName" type="text" class="form-control" placeholder="Last Name" required />
            </div>
            <div class="form-group col-md-12">
                <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" required />
            </div>
            <div class="form-group col-md-12">
                <label>Date of Birth</label>
                <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" required />
            </div>
            <div class="form-group col-md-12">
                <input name="CarYear" type="number" class="form-control" min="1" max="9999" step="1" placeholder="Car Year" required />
            </div>
            <div class="form-group col-md-12">
                <input name="CarMake" type="text" class="form-control" placeholder="Car Make" required />
            </div>
            <div class="form-group col-md-12">
                <input name="CarModel" type="text" class="form-control" placeholder="Car Model" required />
            </div>
            <div class="form-group col-md-12">
                <label>Have you ever had a DUI?</label>
                <input name="DUI" type="radio" class="form-control" value="true" required />Yes<br />
                <input name="DUI" type="radio" class="form-control" value="false" required />No<br />
            </div>
            <div class="form-group col-md-12">
                <label>How many speeding tickets have you had?</label>
                <input name="SpeedingTickets" type="number" class="form-control" step="1" placeholder="Number of Tickets" required/>
            </div>
            <div class="form-group col-md-12">
                <label>Would you like full coverage of your vehicle?</label>
                <input name="FullCoverage" type="radio" class="form-control" value="true" required />Yes<br />
                <input name="FullCoverage" type="radio" class="form-control" value="false" required />No<br />
            </div>
            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
        }
    </div>
</div>